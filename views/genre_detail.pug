extends layout

block content

  h1 Genre: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Sessions
    
    dl
    each session in genre_sessions
      dt 
        a(href=session.url) #{session.title}
      dd #{session.summary}

    else
      p This genre has no sessions.
      
  hr
  p
    a(href=genre.url+'/delete') Delete genre
  p
    a(href=genre.url+'/update') Update genre